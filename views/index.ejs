<%- include("header") -%>
<div class="box" id="heading">
  <h1> <%= todayDate %></h1>
</div>

<div class="box">

  <%  for(let i = 0 ; i < newListItem.length; i++ ){ %>
  <form class="item" action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= newListItem[i]._id %>" onChange="this.form.submit()">
      <p name="id"><%= newListItem[i].name %></p>
    </div>
  </form>
  <% } %>
  <form class="item form1" action="/" method="post">
    <input type="text" name="newItem" placeholder="new item" autocomplete="off">
    <button type="submit" name="submit" value="<%= todayDate %>">+</button>
  </form>
</div>

<%- include("footer") -%>
